{
    "name": "appliance-cost-compare-node",
    "version": "1.0.0",
    "type": "commonjs",
    "main": "src/cli.js",
    "scripts": {
        "start": "node src/cli.js",
        "build": "node scripts/ensure-artifacts.js",
        "lint": "eslint src tests scripts",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "mutate": "stryker run",
        "metrics:scc": "node scripts/metrics-scc.js",
        "quality": "npm run lint && npm run test:coverage && npm run metrics:scc",
        "ci": "npm run build && npm run quality && npm run mutate"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@stryker-mutator/core": "^8.7.0",
        "@stryker-mutator/jest-runner": "^8.7.0",
        "eslint": "^9.0.0",
        "eslint-plugin-sonarjs": "^1.0.4",
        "globals": "^16.5.0",
        "jest": "^29.7.0"
    }
}
